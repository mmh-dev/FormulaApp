<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.ArticleFragment">


    <Button
        android:id="@+id/save_article_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="200dp"
        android:drawableLeft="@drawable/ic_star_border_yellow"
        android:paddingLeft="10dp"
        android:background="@drawable/btn_save_article"
        android:layout_marginEnd="10dp"
        android:visibility="visible"
        android:textColor="@android:color/white"
        android:text="@string/save_article" />

    <Button
        android:id="@+id/save_article_filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="200dp"
        android:drawableLeft="@drawable/ic_star_filled"
        android:paddingLeft="10dp"
        android:background="@drawable/btn_save_article"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:text="@string/save_article" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/article_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Article" />
    </ScrollView>
</LinearLayout>